<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" {{bind-attr class=":close allowClose::hide"}} data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">
                {{#if titleIconClasses}}
                    <i {{bind-attr class="titleIconClasses"}}></i>
                {{/if}}
                {{{title}}}
            </h4>
        </div>
        <div class="modal-body">
            {{#if body}}
                {{view view.body}}
            {{else}}
                {{yield}}
            {{/if}}
        </div>
        <div {{bind-attr class=":modal-footer fullSizeButtons:modal-footer-full"}}>
            {{#each button in footerButtons}}
                {{#if button.dismiss}}
                    {{bs-button model=button targetObjectBinding="view.targetObject"}}
                {{else}}
                    {{bs-button model=button targetObjectBinding="view.targetObject" loading=loadingState}}
                {{/if}}
            {{/each}}
            {{#each footerViews}}
                {{view this}}
            {{/each}}
        </div>
    </div>
</div>
