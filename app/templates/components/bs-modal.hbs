<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" {{bind-attr class=":close allowClose::hide"}} data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">
                {{#if titleIconClasses}}
                    <i {{bind-attr class="titleIconClasses"}}></i>
                {{/if}}
                {{{title}}}
            </h4>
        </div>
        <div class="modal-body">
            {{#if body}}
                {{view view.body}}
            {{else}}
                {{yield}}
            {{/if}}
        </div>
        <div {{bind-attr class=":modal-footer fullSizeButtons:modal-footer-full"}}>
            {{#each footerButton in footerButtons}}
                {{bs-button content=footerButton targetObjectBinding="view.targetObject"}}
            {{/each}}
            {{#each footerView in footerViews}}
                {{view footerView}}
            {{/each}}
        </div>
    </div>
</div>

<div {{bind-attr style=backdropStyle class=":modal-backdrop fade:fade backdrop:in" }}></div>